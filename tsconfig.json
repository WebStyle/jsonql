{
  "compilerOptions": {
    "lib": ["es6"],
    "outDir": "dist",
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es6",
    "sourceMap": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [ "node_modules/@types" ]
  },
  "exclude": [
    "node_modules"
  ]
}